---
// src/components/gallery/GalleryImage.astro
const { 
  id, 
  title, 
  image, 
  alt, 
  game, 
  favorite,
  baseUrl,
  width,
  height
} = Astro.props;

// Calculate aspect ratio for the image container
const aspectRatio = width && height ? (height / width) * 100 : 56.25; // Default to 16:9
---

<article class={`gallery-item ${favorite ? 'favorite' : ''}`}>
  <a 
    href={`/images/gaming-moments/fullsize/${image}`}
    data-src={`/images/gaming-moments/fullsize/${image}`}
    data-sub-html={`<h4>${title}</h4><p>${game}</p>`}
    class="gallery-image-link"
    aria-label={`View ${title} from ${game}`}
  >
    <div class="image-container" style={`padding-bottom: ${aspectRatio}%`}>
      <img 
        src={`${baseUrl}${image}`} 
        alt={alt} 
        loading="lazy"
        class="gallery-image"
        width={width}
        height={height}
      />
    </div>
  </a>
  <div class="gallery-item-info">
    <h3>{title}</h3>
    <div class="meta">
      <span class="game-tag">{game}</span>
      {favorite && <span class="favorite-badge" aria-label="Favorite">â˜…</span>}
    </div>
  </div>
</article>

<style>
  .gallery-item {
    position: relative;
    border: 2px solid var(--text-color);
    background: var(--card-bg);
    transition: transform 0.2s, box-shadow 0.2s;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  
  .gallery-item:hover {
    transform: translateY(-4px);
    box-shadow: 4px 4px 0 var(--text-color);
  }
  
  .gallery-image-link {
    display: block;
    text-decoration: none;
    color: inherit;
    flex-grow: 1;
    overflow: hidden;
  }
  
  .image-container {
    position: relative;
    width: 100%;
    overflow: hidden;
  }
  
  .gallery-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .gallery-item:hover .gallery-image {
    transform: scale(1.05);
  }
  
  .gallery-item-info {
    padding: 1rem;
    border-top: 2px solid var(--text-color);
  }
  
  .gallery-item-info h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
    line-height: 1.3;
  }
  
  .meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .game-tag {
    background: var(--accent-color);
    color: var(--text-on-accent);
    padding: 0.25rem 0.5rem;
    font-size: 0.8rem;
    display: inline-block;
    border-radius: 2px;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .favorite-badge {
    color: gold;
    font-size: 1.2rem;
    filter: drop-shadow(0 0 2px rgba(0,0,0,0.7));
  }
  
  .gallery-item.favorite {
    border-color: gold;
  }
  
  .gallery-item.favorite .gallery-item-info {
    border-top-color: gold;
  }
</style>

<script>
  // Initialize lightgallery when component mounts
  if (typeof window !== 'undefined') {
    document.addEventListener('astro:page-load', () => {
      const galleryLinks = document.querySelectorAll('.gallery-image-link');
      if (galleryLinks.length > 0) {
        import('lightgallery.js').then(({ default: lightGallery }) => {
          lightGallery(document.getElementById('gallery-container'), {
            selector: '.gallery-image-link',
            download: false,
            getCaptionFromTitleOrAlt: false,
            showAfterLoad: true,
            counter: true,
            enableDrag: true,
            enableSwipe: true,
            speed: 500
          });
        });
      }
    });
  }
</script>
