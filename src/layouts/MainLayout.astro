---
import "../styles/globals.css";
import Header from '../components/react/Header.jsx';

// Add global styles for modal
const modalStyles = `
  #modal-root {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9999;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }
  
  body.modal-open {
    overflow: hidden;
    height: 100%;
  }
  
  html.modal-open {
    overflow: hidden;
    height: 100%;
  }
`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>YourGamertag</title>
    <style>{modalStyles}</style>
    <script>
      // Client-side script to handle modal root creation
      document.addEventListener('DOMContentLoaded', () => {
        if (!document.getElementById('modal-root')) {
          const modalRoot = document.createElement('div');
          modalRoot.id = 'modal-root';
          document.body.appendChild(modalRoot);
        }
      });
    </script>
  </head>
  <body>
    <Header client:load />
    <slot />
    <!-- Modal root will be created by the script -->
  </body>
</html>
